<scroll-view scroll-y class="">

  <view class="cu-list grid no-border col-4 bg-gradual-blue radius margin-top margin-left margin-right margin-bottom">
    <view class="cu-item" wx:for="{{iconList}}" wx:key>
      <view class="cuIcon-{{item.icon}} text-{{item.color}}" style='font-size:25px;'>
        <view class="cu-tag badge">
          <block wx:if="{{item.badge!=1}}">{{item.badge>99?"99+":item.badge}}</block>
        </view>
      </view>
      <view class="text-white">{{item.name}}</view>
    </view>
  </view>
  <view class="text-black text-sm margin-bottom">
    <text class="cuIcon-warn text-red margin-left-lg"></text> 您有共计: {{dataList.length}}项绩效任务未完成。
  </view>



  <view class="cu-bar bg-white">
    <view class="action">
      <text class="cuIcon-title text-blue"></text> 绩效日历
    </view>
  </view>

  <calendar calendar-style="calendar" header-style="calendar-header" board-style="calendar-board" days-color="{{dayStyle}}" weeks-type="cn" binddayClick="dayClick" bindnextMonth="next" bindprevMonth="prev" binddateChange="dateChange" />

  <view class='cu-tabbar-height'></view>
</scroll-view>